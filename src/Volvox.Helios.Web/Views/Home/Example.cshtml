            <h5 class="text-center">Stream Role</h5>
            <div class="col-12">
                <!-- Accordion so we only have one tab open at a time -->
                <div class="accordion" id="accordionExample">
                    <div class="card text-center">
                        <div class="card-header">
                            <ul class="nav nav-tabs card-header-tabs">
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="collapse" data-target="#StreamRoleDescription" aria-expanded="false" aria-controls="StreamRoleDescription"aria-controls="collapseOne" >Description</a>
