@model Volvox.Helios.Web.ViewModels.Moderation.PunishmentsViewModel
@{
    ViewData["Title"] = "Punishment Settings";
}

<div class="bg-mat-dark col-12" style="padding-top: 50px;padding-bottom: 50px;background: rgba(0,0,0,.5);font-size:25px;">
    <a href="/" class="text-white">Moderation</a> <i class="fas fa-chevron-right" style="font-size: 22px;"></i>
    <span class="color-gray2">Punishments</span>
</div>

@if(Model.Punishments.Count > 0)
{

} else
{
    <div>
        No Punishments available.
    </div>
}
<form method="POST">
    <section class="container">
        <div class="vertical-margin-large">
            <table asp-for="Punishments" style="width: 100%">

                <thead>
                    <tr>
                        <td>Punishment Type</td>
                        <td>Duration (mins)</td>
                        <td>Warning Type</td>
                        <td>Warning Threshold</td>
                        <td>Role</td>
                        <td>Remove</td>
                    </tr>
                </thead>

                <tbody id="PunishmentTableBody">
                    @{
                        var i = 0;
                        foreach (var punishment in Model.Punishments)
                        {
                            Html.ViewData.TemplateInfo.HtmlFieldPrefix = $"Punishments[{i}]";
                            <partial name="_PunishmentRowReadonly" , model="punishment" />
                            i++;
                        }
                    }
                </tbody>
                <tfoot>
                    <tr></tr>
                </tfoot>
            </table>
        </div>
    </section>
    <div class="form-group">
        <button id="RemoveSelected" class="btn btn-danger" data-toggle="tooltip" data-original-title="Add more controls"><i class="glyphicon glyphicon-plus-sign"></i>Remove Selected</button>
    </div>

    <div class="form-group">
        <a class="btn btn-primary" asp-controller="Moderation" asp-action="newpunishment">Add New</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $('main').removeClass('container').addClass('p-0 mt-0');
    </script>
}
<style>
    .table-remove {
        color: #700;
        cursor: pointer;
    }

    table-remove:hover {
        color: #f00;
    }
</style>