    {
        <div class="col-sm">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        @module.Name
                        <a style="color: black" class="float-right" asp-controller="Settings" asp-action="StreamAnnouncerSettings">
                            <i class="fas fa-cog"></i>
                        </a>
                    </h5>
                    <p class="card-text">@module.Description</p>
                </div>
            </div>
        </div>
    }
</div>